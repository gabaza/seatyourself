
<h1><%= @restaurant.name %> </h1>

<p> <%=@restaurant.address %>, <%= @restaurant.price_range %></p>

<p>Phone number: <%=@restaurant.phone_number%></p>
<p>Hours: <%=@restaurant.opening_time %>AM to <%=@restaurant.closing_time_display%></p>

<p><%= link_to 'Back to Restaurants', root_url %>

<% if current_user == @restaurant.user %>
<p><%= link_to 'Edit Restaurant', edit_restaurant_path(@restaurant) %> | <%= link_to 'Delete Restaurant', restaurant_path(@restaurant), method: :delete, data: {confirm: 'Are you sure you want to delete this restaurant?'} %></p>

<p><%= link_to 'All Reservations', restaurant_reservations_path(@restaurant) %> </p>
<% end %>

<h1>Reserve table </h1>

<%= form_for ([@restaurant, @reservation]) do |f| %>
 <div class = "field"><%= f.label :time %>:
 <%= f.datetime_select :time, discard_seconds: true, discard_minute: true %>

 <div class = "field">
 <%= f.label  :party_size %>
 <%= f.text_field  :party_size %> </div>
 <%= f.submit %>
 <% end %>
