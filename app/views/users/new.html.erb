<h1 class="sign_up_head">Create an account</h1>

<% if @user.errors.any? %>
 <ul>
   <% @user.errors.full_messages.each do |m| %>
     <li><%= m %></li>
   <% end %>
 </ul>
<% end %>

<%= form_for [@user] do |f| %>

  <div class="field">
    <p><%= f.label :name %></p>
    <p><%= f.text_field :name %></p>
  </div>

  <div class="field">
    <p><%= f.label :email %></p>
    <p><%= f.text_field :email %></p>
  </div>

  <div class="field">
    <p><%= f.label :phone_number %></p>
    <p><%= f.text_field :phone_number %></p>
  </div>

  <div class="field">
    <p><%= f.label :password %></p>
    <p><%= f.password_field :password %></p>
  </div>

  <div class="field">
    <p><%= f.label :password_confirmation %></p>
    <p><%= f.password_field :password_confirmation %></p>
  </div>

  <div class="submit_button">
    <%= f.submit %>
    <% end %>
  </div>

</div>

<p><%= link_to 'Back to Restaurants', root_url %></p>
