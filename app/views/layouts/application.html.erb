<!DOCTYPE html>
<html>
<head>
  <title>Seatyourself</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <p class="userinfo">
    <% if flash[:notice] %>
     <div class="notice"><%= flash[:notice] %></div>
    <% end %>
    <% if flash[:alert] %>
     <div class="alert"><%= flash[:alert] %></div>
    <% end %>
       <% if current_user %>
         Signed in as <%= current_user.email %>. <%= link_to "Log out", sessions_path, :method => :delete %>
       <% else %>
         <%= link_to "Log in", new_sessions_path %> or <%= link_to "Sign up", new_users_path %>
       <% end %>
       </p>
<%= yield %>

</body>
</html>
